{
  "Name": "ftp",
  "Type": "Tekook.BackupR.Lib.Providers.SftpProvider",
  "Provider": {
    "Host": "ftp.dev.local",
    "Path": "/upload",
    "Port":  2222,
    "Username": "foo",
    "Password": "pass"
  },
  "Backup": {
    "Folders": [
      {
        "Disabled": true,
        "Name": "Home-Backup",
        "UploadName": "home_$date.tar.gz",
        "UploadPath": "home",
        "Path": "C:\\tmp\\b\\home",
        "Compress": true,
        "Excludes": [
          "asd\\bl*"
        ]
      }
    ],
    "Commands": [
      {
        "Name": "Command-Backup",
        "Disabled": true,
        "UploadName": "etc_$date",
        "UploadPath": "etc",
        "Command": "powershell",
        "Arguments": "C:\\tmp\\b\\script.ps1"
      }
    ],
    "MysqlBackups": [
      {
        "Name": "Mysql-Backup",
        "UploadPath": "mysql",
        "UploadName": "mysql_$date.tar.gz",
        "MysqlDumpPath": "C:\\tmp\\b\\mysql\\mysqldump.exe",
        "Host": "mysql-db.dev.local",
        "Username": "root",
        "Password": "Docker_1337",
        "PasswordViaEnvironment": true,
        "Databases": [
          "alertify",
          "laravel"
        ],
        "FetchDatabases": false,
        "Excludes": [
          "information_schema",
          "performance_schema"
        ],
        "AddLocks": true,
        "Events": true,
        "FlushPrivileges": false,
        "Routines": true,
        "Triggers": true
      }
    ]
  },
  "Containers": [
    {
      "Path": "etc",
      "MaxSize": "1GB",
      "MaxFiles": 10
    },
    {
      "Path": "etc2",
      "MaxSize": "1GB",
      "MaxFiles": null
    }
  ]
}